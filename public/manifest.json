      "icons": [
        {
          "src": "/icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate",
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+dineflow",
      "url": "/?restaurant=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "permissions": [
    "notifications",
    "geolocation",
    "camera"
  ],
  "features": [
    "Cross Platform",
    "Offline Support",
    "Push Notifications",
    "QR Code Scanner",
    "Real-time Updates",
    "Secure Payments",
    "Multi-language Support"
  ],
  "developer": {
    "name": "DineFlow Team",
    "url": "https://dineflow.com"
  },
  "homepage_url": "https://dineflow.com",
  "scope_extensions": [
    {
      "origin": "https://api.dineflow.com"
    }
  ]
} 