  "shortcuts": [
    {
      "name": "Book a Table",
      "short_name": "Book",
      "description": "Quickly book a table at your favorite restaurant",
      "url": "/booking",
      "icons": [
        {
          "src": "/icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "My Bookings",
      "short_name": "Bookings",
      "description": "View and manage your restaurant bookings",
      "url": "/bookings",
      "icons": [
        {
          "src": "/icon-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Restaurants",
      "short_name": "Restaurants",
